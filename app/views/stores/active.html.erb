<p id="notice"><%= notice %></p>


<table>
    <tbody>
      <tr>
         <%  if valid_employee!=nil %>

         <td> <%= link_to '<- Back to All Stores ', stores_path %>   </td>
         <td><%= link_to 'List of All Inactive Stores', store_inactive_path %></td>
        <%end%>

      </tr>
    </tbody>
</table>


<h1>Active Stores</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Phone</th>
      <th>Latitude</th>
      <th>Longtitude</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @store_active.each do |store| %>
      <tr>
        <td><%= store.name %></td>
        <td><%= store.street %></td>
        <td><%= store.city %></td>
        <td><%= store.state %></td>
        <td><%= store.zip %></td>
        <td><%= store.phone %></td>
        <td><%= store.latitude %></td>
        <td><%= store.longitude %></td>
        <td><%= store.active %></td>
        <td><%= link_to 'Show', store %></td>
         <%  if valid_employee!=nil &&  (valid_employee.role=="admin") %>

        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%  if valid_employee!=nil &&  (valid_employee.role=="admin") %>

<%= link_to 'Click to Create New Store', new_store_path %>
<% end %>
