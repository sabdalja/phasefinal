<h1>Shifts: Chronologically</h1>



<table>
  <thead>
    <tr>
      <th>Assignment ID</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Notes</th>
      <th colspan="3"></th>
      
    
    </tr>
  </thead>

  <tbody>
    <% @shift_chronological.each do |shift| %>
      <tr>
        <td><%= shift.assignment_id %></td>
        <td><%= shift.date %></td>
        <td><%= shift.start_time %></td>
        <td><%= shift.end_time %></td>
        <td><%= shift.notes %></td>
        <td><%= link_to 'Show', shift %></td>
        <td><%= link_to 'Edit', edit_shift_path(shift) %></td>
        <td><%= link_to 'Destroy', shift, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

